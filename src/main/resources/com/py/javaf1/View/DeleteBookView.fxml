<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            styleClass="anchor"
            fx:controller="com.py.javaf1.Controller.DeleteBookController"
            prefHeight="400.0" prefWidth="600.0">
    <stylesheets>
        <URL value="@../Style/hello-view.css" />
    </stylesheets>
    <center>
        <GridPane alignment="center" hgap="10" vgap="10">
            <Label text="图书编号:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="bookIDField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            <Button text="查询" onAction="#handleSearchBook" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
            <Label fx:id="showDetail" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            <Label fx:id="showDetail1" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            <Button text="删除" onAction="#handleDeleteBook" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            <Button text="返回管理员选择界面" onAction="#handleReturnAdminMain" GridPane.rowIndex="8" GridPane.columnIndex="1"/>

        </GridPane>

    </center>
</BorderPane>
