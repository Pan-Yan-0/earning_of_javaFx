<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<!-- 布局设置为BorderPane，界面分为上下两个部分 -->
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.py.javaf1.Controller.AdminLoginController"
            prefHeight="400.0" prefWidth="600.0">

    <!-- 中心部分使用GridPane布局 -->
    <center>
        <GridPane alignment="center" hgap="10" vgap="10">
            <!-- 管理员登录提示 -->
            <Label text="管理员登录界面" GridPane.columnIndex="1" GridPane.rowIndex="0" />
            <!-- 用户名标签和输入框 -->
            <Label text="用户名:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <!-- 密码标签和输入框 -->
            <Label text="密码:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <!-- 登录按钮 -->
            <Button text="登录" onAction="#handleLogin" GridPane.columnIndex="1" GridPane.rowIndex="3" />
        </GridPane>
    </center>

    <!-- 底部部分使用HBox布局 -->
    <bottom>
        <HBox spacing="10" alignment="center">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <!-- 返回读者登录界面按钮 -->
            <Button text="返回致读者登录界面" onAction="#switchToReaderLogin" />
        </HBox>
    </bottom>
</BorderPane>
